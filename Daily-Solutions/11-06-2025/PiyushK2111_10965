import java.util.Scanner;
public class ArmstrongFinder {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int num= scanner.nextInt();
        int originalNum= num;
        int count= 0;
        int temp= num;
        //Counting Digits:
        while (temp > 0) {
            count++;
            temp = temp / 10;  //Removing the last digit.
        }
        int sum = 0;
        temp = num;
        //Finding sum of digits raised to the count power.
        while (temp > 0) {
            int digit = temp % 10;
            //Calculating digit^count by multiplying digit , count times.
            int power = 1;
            for (int i = 1; i <= count; i++) {
                power = power * digit;
            }
            sum = sum + power;
            temp = temp / 10;
        }
        //Checking and printing result.
        if (sum == originalNum) {
            System.out.println(originalNum + " is an Armstrong number.");
        } else {
            System.out.println(originalNum + " is not an Armstrong number.");
        }
    }
}

